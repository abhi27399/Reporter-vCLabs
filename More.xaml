<Window x:Class="Reporter_vCLabs.More"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reporter_vCLabs"
             Width="300" Height="150">
    
    <Grid Width="250" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4.5*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4.5*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Serial Number" Grid.Column="0" FontSize="12" BorderThickness="2" >
            <Grid>
                <Button Name="SerialNumber_Button" Content="Insert" FontSize="12" Width="60" Height="25" Click="SerialNumber_Button_Click"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Severity Flag" Grid.Column="2" FontSize="12" BorderThickness="2">
            <Button Name="SeverityFlag_Button" Content="Remove" FontSize="12" Width="60" Height="25" Click="SeverityFlag_Button_Click"/>
        </GroupBox>
    </Grid>
</Window>
